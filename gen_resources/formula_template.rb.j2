  depends_on "cairo"
  depends_on "pango"
  depends_on "gdk-pixbuf"
  depends_on "libffi"

  def install
    venv = virtualenv_create(libexec, "python3")

{% for resource in resources %}
  system libexec/"bin/pip", "install", "-v", "--no-deps",
